<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.components.cards.CardSavedRecommendationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:padding="6dp"
        android:background="@drawable/card_link_round">

        <ImageView
            android:id="@+id/first_outfit"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:src="@drawable/recommendation_outfit_illustration"
            android:background="@drawable/card_round"
            android:clipToOutline="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/second_outfit"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:src="@drawable/recommendation_outfit_illustration"
            android:background="@drawable/card_round"
            android:clipToOutline="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/third_outfit"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:src="@drawable/recommendation_outfit_illustration"
            android:background="@drawable/card_round"
            android:clipToOutline="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="@drawable/card_more_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" >

            <ImageView
                android:id="@+id/icon_plus"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_plus"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/text_count"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/text_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_example"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toEndOf="@id/icon_plus"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>