<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_my_outfit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/my_outfit_image"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginHorizontal="8dp"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:src="@drawable/image_recommendation_outfit_illustration"
        android:background="@drawable/bg_card_round" />

    <ImageButton
        android:id="@+id/checked"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end"
        android:elevation="10dp"
        android:background="@drawable/bg_rounded_full"
        android:src="@drawable/ic_checked"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp" />

</FrameLayout>